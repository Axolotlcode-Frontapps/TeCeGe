---
import { CardTournaments } from './tournaments_card';
import CalendarIcon from '@icons/calendar.svg';
import TrophyIcon from '@icons/trophy.svg';
import MagicIcon from '@icons/magic_wand.svg';
import BallIcon from '@icons/ball.svg';

const missionData = [
    {
        icon: TrophyIcon,
        title: "Torneo Nacional Pokémon",
        subtitle: "15-16 de Abril • Centro Banamex, CDMX",
        tag: "Inscripciones abiertas",
        award: "Premio: $50,000 MXN",
        variant: "icon1",
        bg: "bg1",
    },
    {
        icon: MagicIcon,
        title: "Yu-Gi-Oh! Regional Guadalajara",
        subtitle: "22-23 de Abril • Expo Guadalajara",
        tag: "Próximamente",
        award: "Premio: $30,000 MXN",
        variant: "icon2",
        bg: "bg2",
    },
    {
        icon: BallIcon,
        title: "MTG Modern Masters",
        subtitle: "29-30 de Abril • Monterrey Arena",
        tag: "Early Bird",
        award: "Premio: $75,000 MXN",
        variant: "icon3",
        bg: "bg3",
    },
]
---

<section class="tournaments">
    <div class="tournaments__container">
        <div class="tournaments__information">
            <h1 class="tournaments__title">Torneos y eventos</h1>
            <h2 class="tournaments__subtitle">Participa en torneos oficiales y eventos especiales en todo México</h2>
        </div>
        <div class="tournaments__events">
            <div class="tournaments__options">
                {missionData.map((card) => <CardTournaments {...card}/>)}
            </div>
            <div class="tournaments__image-container">
                <div class="tournaments__image-information">
                    <h1 class="tournaments__image-title">Próximo evento</h1>
                    <h2 class="tournaments__image-subtitle">Torneo Pokémon TCG - Ciudad de México</h2>
                    <button class="tournaments__button-sign">Inscribirse ahora</button>
                </div>
            </div>
        </div>
        <div class="tournaments__button">
            <button class="tournaments__button-events">Ver todos los eventos<CalendarIcon/></button>
        </div>
    </div>
</section>

<style lang="scss">
@reference '@styles/global';

.tournaments{
    @apply w-full;

    &__container{
        @apply p-16 bg-gradient-to-br from-events1 via-events2 to-events3;
    }

    &__information{
        @apply text-white text-center mb-16;
    }

    &__title{
        @apply text-2xl md:text-4xl font-bold mb-4;
    }

    &__subtitle{
        @apply text-xl font-medium;
    }

    &__events{
        @apply grid grid-cols-1 md:grid-cols-2 gap-14 mb-10;
    }

    &__image-container{
        @apply bg-[url('../../assets/images/img9.png')] bg-cover h-100 text-white relative rounded-2xl opacity-90 my-12;
    }

    &__image-information{
        @apply absolute bottom-6 left-6;
    }

    &__image-title{
        @apply text-2xl font-bold mb-2;
    }

    &__image-subtitle{
        @apply text-lg font-medium mb-4;
    }

    &__button-sign{
        @apply text-base font-bold  bg-primary rounded-full py-3 px-6 transform transition hover:bg-bg2-pokemon cursor-pointer;
    }

    &__button{
        @apply text-center md:text-lg;
    }

    &__button-events{
        @apply inline-flex gap-3 cursor-pointer bg-white rounded-full py-5 px-8 text-events2 font-bold transform transition hover:bg-blue-50;
    }
}

</style>