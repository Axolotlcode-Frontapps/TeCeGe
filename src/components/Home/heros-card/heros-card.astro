---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  icon: ImageMetadata;
  title: string;
  variant?: 'pokemon' | 'yugioh' | 'mtg' | 'db';
}

const { title, icon, variant } = Astro.props;

const variantClasses: Record<string, string> = {
  pokemon: 'from-indigo-500 to-indigo-700',
  yugioh: 'from-purple-500 to-pink-500',
  mtg: 'from-green-500 to-blue-500',
  db: 'from-orange-400 to-orange-600',
};

const gradientClass = variant ? variantClasses[variant] : undefined;
---

<article class="hero">
  <div class="hero__option" class:list={[gradientClass && `bg-gradient-to-r ${gradientClass}`]}>
    <div class="hero__icon">
      <Image  src={icon} alt="icon"/>
    </div>
    <h1 class="hero__text-option">{title}</h1>
  </div>
</article>

<style lang="scss">
  @reference '@styles/global';

  .hero {

    &__option{
      @apply text-center rounded-lg py-4 h-25 transform hover:scale-105 duration-300;   
    }

    &__icon{
      @apply  flex justify-center;
    }

    &__text-option{
      @apply mt-2 font-bold;
    }
  }
</style>
